//- AI Chat (移动端全屏版本 - 底部输入框)
#ai-chat
  .ai-chat-dialog#ai-chat-dialog(role="dialog" aria-modal="true" aria-hidden="true")
    .ai-chat-banner
      span.ai-chat-title 嘟嘟可
      button.ai-chat-close-button#ai-chat-close(type="button" title="关闭" aria-label="关闭")
        i.fas.fa-times
    .ai-chat-body
      .ai-chat-messages#ai-chat-messages(role="log" aria-live="polite" aria-relevant="additions")
    .ai-chat-input-wrap
      input.ai-chat-input(type="text", placeholder="输入消息...", autocomplete="off", aria-label="输入消息")
      button.ai-chat-send-btn(type="button", aria-label="发送")
        i.fas.fa-paper-plane

  #ai-chat-mask(aria-hidden="true")

script(src=url_for('/js/ai-chat.js') data-pjax)
