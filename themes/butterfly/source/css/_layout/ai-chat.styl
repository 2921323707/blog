// AI Chat modal (MVP)

#ai-chat-dialog
  position: fixed
  right: 20px
  bottom: 90px
  z-index: 1001
  display: none
  flex-direction: column
  padding: 0
  box-sizing: border-box
  width: 420px
  max-width: calc(100vw - 40px)
  // 固定高度（桌面端），避免被消息撑大
  height: 617px
  max-height: calc(100vh - 120px)
  background: var(--search-bg)
  color: var(--font-color)
  addBorderRadius(12, true)
  border: 1px solid var(--light-grey)
  box-shadow: var(--card-box-shadow)
  overflow: hidden
  transition: box-shadow .3s, transform .3s, opacity .3s
  transform: translateZ(0)
  -webkit-font-smoothing: antialiased

  &:hover
    box-shadow: var(--card-hover-box-shadow)

  +maxWidth768()
    top: var(--ai-chat-top, 0px)
    right: 0
    left: 0
    bottom: auto
    width: 100%
    height: var(--ai-chat-height, 100dvh)
    max-width: none
    max-height: none
    border-radius: 0
    // iOS 键盘 + fixed + transform 组合容易出现“局部放大/抖动”
    transform: none

  .ai-chat-nav
    display: flex
    justify-content: space-between
    align-items: center
    padding: 14px 16px
    background: var(--search-bg)
    color: var(--font-color)
    font-size: 1.15em
    line-height: 1
    border-bottom: 1px solid var(--light-grey)

    +maxWidth768()
      padding: calc(12px + env(safe-area-inset-top)) 12px 12px

    .ai-chat-title
      font-weight: 600
      letter-spacing: .2px

    .ai-chat-close-button
      display: inline-flex
      justify-content: center
      align-items: center
      width: 30px
      height: 30px
      border: none
      background: var(--btn-bg)
      color: var(--btn-color)
      addBorderRadius(6)
      @extend .btn-effects

      &:hover
        background: var(--btn-hover-color)

      +maxWidth768()
        width: 34px
        height: 34px

  .ai-chat-body
    display: flex
    flex-direction: column
    gap: 12px
    padding: 12px 16px 16px
    // 让内容区在弹窗里自适应剩余高度（移动端键盘弹起时也能跟随）
    flex: 1
    min-height: 0

    +maxWidth768()
      padding: 12px
      padding-bottom: calc(12px + env(safe-area-inset-bottom))

  .ai-chat-messages
    flex: 1
    min-height: 0
    // 确保在 flex 容器里能正确收缩，从而出现滚动条
    height: 0
    padding: 10px 12px
    background: var(--card-bg)
    border: 1px solid var(--light-grey)
    border-radius: 10px
    overflow-x: hidden
    overflow-y: auto
    overscroll-behavior: contain
    -webkit-overflow-scrolling: touch

  .ai-chat-form
    display: flex
    gap: 10px
    align-items: center
    margin: 0
    padding: 8px
    background: var(--card-bg)
    border: 1px solid var(--light-grey)
    addBorderRadius(10, true)
    transition: border-color .2s ease, box-shadow .2s ease

    &:focus-within
      border-color: var(--default-bg-color)
      box-shadow: 0 0 0 3px rgba($theme-color, .15)

  .ai-chat-input
    flex: 1
    height: 38px
    padding: 0 10px
    border: none
    background: transparent
    color: var(--font-color)
    outline: none
    -webkit-appearance: none
    +maxWidth768()
      // iOS: input 字号 < 16px 会自动放大页面
      font-size: 16px

    &::placeholder
      color: var(--dark-grey)

  .ai-chat-send
    width: 42px
    height: 38px
    display: inline-flex
    justify-content: center
    align-items: center
    background: var(--btn-bg)
    color: var(--btn-color)
    addBorderRadius(10)
    @extend .btn-effects

    &:hover
      background: var(--btn-hover-color)

    &:focus-visible
      outline: 2px solid rgba($theme-color, .45)
      outline-offset: 2px

    +maxWidth768()
      width: 44px
      height: 40px

// message bubbles
.ai-chat-msg
  display: flex
  flex-direction: column
  align-items: flex-start
  margin: 8px 0

  .ai-chat-bubble
    max-width: 85%
    padding: 9px 12px
    line-height: 1.6
    white-space: pre-wrap
    word-break: break-word
    border: 1px solid var(--light-grey)
    background: var(--card-bg)
    color: var(--font-color)
    addBorderRadius(12, true)
    box-shadow: 0 2px 8px rgba(7, 17, 27, .06)

.ai-chat-msg--user
  align-items: flex-end

  .ai-chat-bubble
    border-color: rgba($theme-color, .25)
    background: rgba($theme-color, .14)

.ai-chat-msg--bot
  align-items: flex-start

  .ai-chat-bubble
    background: var(--card-bg)
    border-color: var(--light-grey)
    color: var(--font-color)

// citations (sources)
.ai-chat-citations
  margin-top: 10px
  padding: 8px 10px
  border: 1px dashed var(--light-grey)
  background: var(--card-bg)
  addBorderRadius(10, true)

  &__summary
    cursor: pointer
    font-weight: 600
    font-size: .95em
    color: var(--font-color)
    user-select: none

  &[open]
    .ai-chat-citations__summary
      margin-bottom: 8px

  &__list
    margin: 0
    padding-left: 18px

  &__item
    margin: 6px 0

  &__row
    display: flex
    align-items: center
    justify-content: space-between
    gap: 10px

  &__link
    display: inline-block
    color: var(--theme-color)
    text-decoration: none
    word-break: break-word
    flex: 1
    min-width: 0

    &:hover
      text-decoration: underline

#ai-chat-mask
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1000
  display: none
  background: rgba($dark-black, .6)

// fallback launcher button (when Butterfly rightside is unavailable)
.ai-chat-float-btn
  position: fixed
  right: 16px
  bottom: calc(16px + env(safe-area-inset-bottom))
  z-index: 1002
  width: 44px
  height: 44px
  display: inline-flex
  align-items: center
  justify-content: center
  border: none
  background: var(--theme-color)
  color: #fff
  border-radius: 999px
  box-shadow: 0 8px 22px rgba(0, 0, 0, .18)
  opacity: .95
  cursor: pointer
  -webkit-tap-highlight-color: transparent

  &:active
    transform: translateY(1px)

  &:focus-visible
    outline: 3px solid rgba($theme-color, .35)
    outline-offset: 3px

